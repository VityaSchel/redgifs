{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2021",
    "lib": [
      "ES2021.String"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./out",
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true,
      }
    ],
    "esModuleInterop": true,
  },
  "include": [
    "src/**.ts", 
    "src/scenes/index.ts", 
    "src/invoices/index.ts",
    "src/webserver/**.ts",
    "src/adminbot/**.ts",
  ],
  "exclude": [
    "node_modules",
    "test",
    "out"
  ],
}